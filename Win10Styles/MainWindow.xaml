<Window
    x:Class="Win10Styles.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Win10Styles"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="500"
    Width="600"
    BorderThickness="0"
    >
    <Grid>
        <local:STabControl
            TabStripPlacement="Left">
            <local:STabItem
                Header="Display">
                Display stuff goes here
            </local:STabItem>
            <local:STabItem
                Header="Apps &amp; Features">
                Apps n features go here
            </local:STabItem>
            <local:STabItem
                Header="Default Apps">
                Default apps
            </local:STabItem>
            <local:STabItem
                Header="Notifications">
                Notifications go here
            </local:STabItem>
            <local:STabItem
                Header="Power &amp; Sleep">
                Power n sleeps go here
            </local:STabItem>
        </local:STabControl>
    </Grid>
</Window>
